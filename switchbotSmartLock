metadata
{
    definition(name: "SwitchBot Smart Lock", namespace: "tomw", author: "tomw", importUrl: "")
    {
        capability "ContactSensor"
        capability "Lock"
        capability "Refresh"
    }
}

def initialize()
{
    sendEvent(name: "contact", value: "unknown")
    sendEvent(name: "lock", value: "unknown")
    
    refresh()
}

def refresh()
{
    unschedule(refresh)
    
    try
    {
        def id = getParent()?.getId(device.getDeviceNetworkId())
        def respData = getParent()?.readDeviceStatus(id)
        
        if(!respData)
        {
            return
        }
        
        parse(respData.body)
    }
    catch (Exception e)
    {
        log.debug "refresh() failed: ${e.message}"
    }
}

def parse(body)
{
    if(!body) { return }
    
    if(null != body.doorState)
    {
        def state = body.doorState.toLowerCase()
        sendEvent(name: "contact", value: ["open", "closed"].contains(state) ? state : "unknown")
    }
    
    if(null != body.lockState)
    {
        def state = body.lockState.toLowerCase()
        sendEvent(name: "lock", value: ["unlocked", "locked", "jammed"].contains(state) ? state : "unknown")
    }
}

def writeDeviceCommand(command, parameter = "default", commandType = "command")
{
    def id = getParent()?.getId(device.getDeviceNetworkId())
    if(id)
    {
        def respData = getParent()?.writeDeviceCommand(id, command, parameter, commandType)
        runIn(2, refresh)
    }
}

def lock()
{
    writeDeviceCommand("lock")
}

def unlock()
{
    writeDeviceCommand("unlock")
}

metadata
{
    definition(name: "SwitchBot Scene", namespace: "tomw", author: "tomw", importUrl: "")
    {
        capability "Momentary"       
    }
}

def push() {
    def id = getParent()?.getId(device.getDeviceNetworkId())
    if(id)
    {
        def respData = getParent()?.executeScene(id)
        runIn(2, refresh)
    }
}